{% render 'product-template', product: product, section_id: section.id %}

{% schema %}
{
  "name": "t:sections.main-product.name",
  "tag": "section",
  "blocks": [
    {
      "type": "vendor",
      "name": "Vendor",
      "limit": 1
    },
    {
      "type": "rating",
      "name": "Product Rating",
      "limit": 1
    },
    {
      "type": "price",
      "name": "Price",
      "limit": 1
    },
    {
      "type": "title",
      "name": "Product Title",
      "limit": 1
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1
    },
    {
      "type": "quantity",
      "name": "Quantity",
      "limit": 1
    },
    {
      "type": "variant_selector",
      "name": "Variant Selector",
      "limit": 1
    },
    {
      "type": "checkout_button",
      "name": "Checkout Button",
      "limit": 1
    },
    {
      "type": "in_stock",
      "name": "In Stock Indicator",
      "limit": 1
    }
  ]
}
{% endschema %}
